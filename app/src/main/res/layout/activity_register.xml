<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201f1f"
    tools:context=".Register">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="329dp"
        android:layout_height="498dp"
        android:layout_centerInParent="true"
        android:background="#2e2d2d"
        app:cardBackgroundColor="#4d4c4c">

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="30dp"
                android:text="Register"
                android:textColor="#b9b8b8"
                android:textSize="50sp"
                android:textStyle="bold" />

            <View
                android:layout_width="329dp"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="119dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/number_regis"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginTop="143dp"
                android:backgroundTint="#b9b8b8"
                android:ems="10"
                android:hint="Your Number"
                android:inputType="textPersonName"
                android:textColor="#b9b8b8"
                android:textColorHint="#b9b8b8"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/pass_regis"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginBottom="161dp"
                android:backgroundTint="#b9b8b8"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#b9b8b8"
                android:textColorHint="#b9b8b8"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="25sp" />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginBottom="78dp"
                android:background="#d87403"
                android:text="Register"
                android:textColor="#f5f2f2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name_regis"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginTop="209dp"
                android:backgroundTint="#b9b8b8"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textColor="#b9b8b8"
                android:textColorHint="#b9b8b8"
                android:textSize="25sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>